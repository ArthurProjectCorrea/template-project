{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "apps/docs/build/**",
        "!**/.next/cache/**"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "api#build": {},
    "api#dev": {},
    "api#lint": {},
    "api#test": {},
    "docs#build": {
      "outputs": ["apps/docs/build/**"]
    },
    "docs#dev": {},
    "docs#lint": {},
    "web#build": {
      "outputs": ["apps/web/.next/**"]
    },
    "web#dev": {
      "cache": false,
      "persistent": true
    },
    "web#lint": {},
    "web#test": {},
    "ui#build:components": {
      "outputs": ["packages/ui/dist/**"]
    },
    "ui#build:styles": {
      "outputs": ["packages/ui/dist/index.css"]
    },
    "ui#test": {},
    "ui#lint": {},
    "format": {
      "outputs": []
    }
  },
  "globalDependencies": ["package.json", "pnpm-lock.yaml", "turbo.json"],
  "ui": "tui",
  "globalEnv": ["PORT"]
}
