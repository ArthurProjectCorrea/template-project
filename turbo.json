{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "test": {},
    "api#build": {},
    "api#dev": {},
    "api#lint": {},
    "api#test": {},
    "docs#build": {
      "outputs": ["apps/docs/build/**"]
    },
    "docs#dev": {},
    "docs#lint": {},
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
